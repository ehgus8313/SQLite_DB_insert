<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical" >

    <LinearLayout
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        >
        <EditText
            android:id="@+id/input01"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="데이터베이스 이름 입력"
            android:text="customer.db"
            android:textSize="16dp"
            >
        </EditText>
        <EditText
            android:id="@+id/input02"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="테이블 이름 입력"
            android:text="employee"
            android:textSize="16dp"/>

    </LinearLayout>


    <LinearLayout
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <EditText
            android:id="@+id/searchinput"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="나이 입력"
            android:text=""
            android:textSize="16dp"/>

        <Button
            android:id="@+id/joBtn"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="검색"
            android:textStyle="bold" />
    </LinearLayout>
    <LinearLayout
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:visibility="gone"
        android:id="@+id/Btlayout"
        android:layout_height="wrap_content">
        <Button
            android:id="@+id/alldelete"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="Table 삭제"
            android:textStyle="bold" />

        <Button
            android:id="@+id/partdelete"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="조건 삭제"
            android:textStyle="bold" />
    </LinearLayout>







    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        >
        <TextView
            android:id="@+id/status"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="#ff99ccee"
            android:textColor="#ff0000ff"
            android:textSize="14dp"
            >
        </TextView>
    </ScrollView>

</LinearLayout>
